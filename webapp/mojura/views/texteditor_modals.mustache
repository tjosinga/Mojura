<div class="texteditor-email-popup-modal modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h3>{{locale_str_system_texteditor_modal_email}}</h3>
			</div>
			<div class="modal-body">
				<label>{{locale_str_system_email}}</label>
				<input type="text" name="email" />
				<label>{{locale_str_system_visible_text}}</label>
				<input type="text" name="visible_text" />
			</div>
			<div class="modal-footer">
				<button class="btn" data-dismiss="modal">{{locale_str_system_cancel}}</button>
				<button class="btn btn-default btn-primary" data-dismiss="modal">{{locale_str_system_save}}</button>
			</div>
		</div>
	</div>
</div>

