<form enctype="multipart/form-data" action="__api__/files/{{fileid}}" method="post">
	<input type="hidden" name="_method" value="{{method}}" />
	<input type="hidden" name="folderid" value="{{folderid}}" />
	<label for="file">{{locale_str_files_file}}</label>
	<input type="file" name="file" />
	<label for="title">{{locale_str_files_alt_name}}</label>
	<input type="text" name="title" value="{{title}}" />

	<label for="description">{{locale_str_system_description}}</label>
	<textarea name='description'>{{description.raw}}</textarea>
</form>
