<form action="{{url}}" method="post">
	<input type="hidden" name="_method" value="{{method}}" />
	<input type="hidden" name="parentid" value="{{parentid}}" />

	<div class="form-group">
		<label for="title_{{urid}}">{{locale_str_system_name}}</label>
		<input id="title_{{urid}}" class="form-control" type="text" name="title" value="{{title}}"/>
	</div>

	<div class="form-group">
		<label for="description_{{urid}}">{{locale_str_system_description}}</label>
		<textarea id="description_{{urid}}" class="form-control small" name='description'>{{description.raw}}</textarea>
	</div>
</form>