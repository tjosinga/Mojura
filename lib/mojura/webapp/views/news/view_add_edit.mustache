<form action="__api__/news/{{id}}" method="post">
	<input type="hidden" name="_method" value="{{method}}" />

	<div class="form-group">
		<label for="{{uid}}_title">{{locale_str_system_title}}</label>
		<input id="{{uid}}_title" class="form-control" type="text" name="title" value="{{title}}" />
	</div>

	<div class="form-group view_texteditor">
		<label for="{{uid}}_content">{{locale_str_news_content}}</label>
		<textarea id="{{uid}}_content" class="form-control texteditor" name='content'>{{content.raw}}</textarea>
	</div>
</form>

<script type="text/javascript">
	TextEditor.init("#{{uid}}_content", "newsAddEditModal");
</script>