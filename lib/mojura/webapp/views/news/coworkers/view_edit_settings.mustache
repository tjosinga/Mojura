<script type="text/javascript">

	NewsSettingsCoworker = (function($) {
		"use strict";

		function setType(value) {
			$("option[value=" + value + "]", "#modalEditView").prop("selected", "selected");
			onChangeType(value);
		}

		function onChangeType (value) {
			$("#{{urid}}_readmore").parent().toggle(value !== "list")
			$("#{{urid}}_article_type").parent().toggle(value === "article")
		}

		function onArticleTypeChange(value) {
		}

		return {
			setType: setType,
			onChangeType: onChangeType,
			onArticleTypeChange: onArticleTypeChange
		};

	})(jQuery);
</script>

<div class="form-group">
	<label for="{{urid}}_type">{{locale_str_news_type}}</label>
	<select id="{{urid}}_type" class="form-control" name="setting_type" onchange="NewsSettingsCoworker.onChangeType(this.value)">
		<option value="overview">{{locale_str_news_type_overview}}</option>
		<option value="list">{{locale_str_news_type_list}}</option>
		<option value="article">{{locale_str_news_type_article}}</option>
	</select>
</div>

<div class="form-group">
	<label for="{{urid}}_article_type">{{locale_str_news_article_type}}</label>
	<select id="{{urid}}_article_type" class="form-control" name="setting_article_type" onchange="NewsSettingsCoworker.onArticleTypeChange(this.value)">
		<option value="0">{{locale_str_news_article_type_0}}</option>
		<option value="1">{{locale_str_news_article_type_1}}</option>
		<option value="2">{{locale_str_news_article_type_2}}</option>
		<option value="3">{{locale_str_news_article_type_3}}</option>
		<option value="4">{{locale_str_news_article_type_4}}</option>
		<option value="5">{{locale_str_news_article_type_5}}</option>
	</select>
</div>

<div class="form-group">
	<label for="{{urid}}_readmore">{{locale_str_news_readmore}}</label>
	<select id="{{urid}}_readmore" class="form-control" name="setting_readmore" onchange="NewsSettingsCoworker.onReadmoreChange(this.value)">
		<option value="disabled">{{locale_str_news_readmore_disabled}}</option>
		<option value="inline">{{locale_str_news_readmore_inline}}</option>
		<option value="new_page">{{locale_str_news_readmore_new_page}}</option>
	</select>
</div>


<script type="text/javascript">
	NewsSettingsCoworker.setType("{{type}}");
</script>