<div id="user-info-{{id}}" class="row">
	<div class="col-xs-4 col-sm-2">
		<a class="thumbnail avatar" href="javascript:void(0)" onclick="UsersView.showEditAvatar()">
			<img src="{{avatar}}&s=256" alt="{{fullname}}">
		</a>
	</div>
	<div class="col-sm-10">
		{{#rights.update}}
			<div class="btn-group pull-right">
				<button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown">
					<i class="fa fa-pencil"></i> <span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu">
					<li><a href="javascript:void(0)" onclick="UsersView.showEditUserInfo()">{{locale_str_users_edit_userinfo}}</a></li>
					<li><a href="javascript:void(0)" onclick="UsersView.showEditAvatar()">{{locale_str_users_edit_avatar}}</a></li>
					<li><a href="javascript:void(0)" onclick="UsersView.showEditPassword()">{{locale_str_users_edit_password}}</a></li>
					{{#rights.subscribe}}
							<li><a href="javascript:void(0)" onclick="UsersView.showEditGroups()">{{locale_str_users_edit_groups}}</a></li>
					{{/rights.subscribe}}
					{{#rights.delete}}
						<li class="divider"></li>
						<li><a href="javascript:void(0)" onclick="UsersView.showDeactivateUser()">{{locale_str_users_deactivate_user}}</a></li>
					{{/rights.delete}}
				</ul>
			</div>
		{{/rights.update}}
		<h2><span class="fullname">{{fullname}}</span> <small>{{username}}</small></h2>
		{{#show_email}}
			<span class="email">{{email}}</span>
		{{/show_email}}
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		UsersView.initialize('{{id}}', 'extensive-user-info-{{urid}}');
	});
</{{escape}}script>
