<form action="__api__/users/{{id}}" method="post" data-username="{{username}}" data-realm="{{settings.core.realm}}">

	{{^rights.force_password}}
		<div class="form-group">
			<label>{{locale_str_users_password_old}}</label>
			<input class="form-control" type="password" name="password_old" data-validation="required" value="" />
		</div>
	{{/rights.force_password}}

	<div class="form-group">
		<label>{{locale_str_users_password_new}}</label>
		<input class="form-control" type="password" name="password_new" data-validation="required" value="" />
	</div>

	<div class="form-group">
		<label>{{locale_str_users_password_check}}</label>
		<input class="form-control" type="password" name="password_check" data-validation="required" value="" />
	</div>
</form>