<form action="__api__/polls/{{pollid}}" method="post">
	<input type="hidden" name="_method" value="{{method}}" />

	<div class="form-group">
		<label for="title_{{urid}}">{{locale_str_system_title}}</label>
		<input class="form-control" type="text" id="title_{{urid}}" name="title" value="{{title}}" />
	</div>

	<div class="checkbox">
		<label>
			<input type="checkbox" name="active" data-type="boolean" value="{{active}}" /> {{locale_str_polls_active}}
		</label>
	</div>

	<div class="form-group">
		<label for="options_{{urid}}">{{locale_str_polls_options}}</label>
		<textarea class="form-control" type="text" id="options_{{urid}}" name="options">{{#options}}{{title}}{{newline}}{{/options}}</textarea>
	</div>
</form>

<script type='text/javascript'>
	BooleanBoxes.init();
</script>
