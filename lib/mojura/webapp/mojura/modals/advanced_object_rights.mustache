<div class="row">
	<div class="col-xs-4"></div>
	<div class="col-xs-2 text-center">{{locale_str_system_right_custom}}</div>
	<div class="col-xs-2 text-center">{{locale_str_system_right_read}}</div>
	<div class="col-xs-2 text-center">{{locale_str_system_right_update}}</div>
	<div class="col-xs-2 text-center">{{locale_str_system_right_delete}}</div>
</div>
{{#categories}}
	<div class="row advanced-rights hover-glow">
		<div class="col-xs-4">{{name}}</div>
		{{#bits}}
			<div class="col-xs-2 text-center">
				<input type="checkbox" class="advanced-rights-checkbox" data-bit="{{.}}" />
			</div>
		{{/bits}}
	</div>
{{/categories}}

<div class="row row-offset2">
	<div class="col-sm-6">
		<h5>
			<button class="btn btn-default btn-xs pull-right" onclick="AdvancedObjectRights.showAdd('users');">
				<span class='fa fa-plus'></span>
			</button>
			{{locale_str_system_owners}}
		</h5>
		<div class="clearfix advanced-rights-list advanced-rights-users-list">
		</div>
		<div class="advanced-rights-users-alert alert alert-info hidden">{{locale_str_system_rights_no_users}}</div>

		<div class="add-users row-offset1 hidden">
			<div class="input-group">
				<input type="text" class="form-control" autocomplete="off" />
				<div class="input-group-btn">
					<button type="button" class="btn btn-success " onclick="AdvancedObjectRights.confirmAdd('users');"><i class="fa fa-check"></i></button>
					<button type="button" class="btn btn-danger" onclick="AdvancedObjectRights.cancelAdd('users');"><i class="fa fa-times"></i></button>
				</div>
			</div>
		</div>

	</div>

	<div class="row-offset2 visible-xs"></div>

	<div class="col-sm-6">
		<h5>
			<button class="btn btn-default btn-xs pull-right" onclick="AdvancedObjectRights.showAdd('groups');">
				<span class='fa fa-plus'></span>
			</button>
			{{locale_str_system_groupmembers}}
		</h5>
		<div class="clearfix advanced-rights-list advanced-rights-groups-list">
		</div>
		<div class="advanced-rights-groups-alert alert alert-info hidden">{{locale_str_system_rights_no_groups}}</div>

		<div class="add-groups row-offset1 hidden">
			<div class="input-group input-group-sm">
				<input type="text" class="form-control input-sm" autocomplete="off" />
				<div class="input-group-btn">
					<button class="input-group-addon bg-success" onclick="AdvancedObjectRights.confirmAdd('groups');"><i class="fa fa-check"></i></button>
					<button class="input-group-addon bg-danger" onclick="AdvancedObjectRights.cancelAdd('groups');"><i class="fa fa-times"></i></button>
				</div>
			</div>
		</div>

	</div>
</div>
