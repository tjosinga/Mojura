<div class="modal fade" id="{{id}}">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="action_add modal-title">{{title}}</h4>
			</div>
			<div class="modal-body">
				{{#body}}
					{{{body}}}
				{{/body}}
				{{^body}}
					<div class="loading"></div>
				{{/body}}
			</div>
			<div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">{{locale_str_system_cancel}}</a>
				<a href="#" class="btn btn-default {{btn_class}}" data-loading-text='{{btn_title}}...' onclick="$(this).button('loading'); {{onclick}}; return false;">
					{{#btn_icon}}<span class='fa {{btn_icon}}'></span>{{/btn_icon}} {{btn_title}}
				</a>
			</div>
		</div>
	</div>
</div>