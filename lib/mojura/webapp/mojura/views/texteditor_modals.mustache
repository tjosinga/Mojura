<div class="texteditor-email-popup-modal modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h3>{{locale_str_system_texteditor_modal_email}}</h3>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label for="{{uid}}_email">{{locale_str_system_email}}</label>
					<input id="{{uid}}_email" class="form-control" type="text" name="email" />
				</div>
				<div class="form-group">
					<label for="{{urid}}_visible_text">{{locale_str_system_visible_text}}</label>
					<input id="{{urid}}_visible_text" class="form-control" type="text" name="visible_text" />
				</div>
			</div>
			<div class="modal-footer">
				<button class="btn" data-dismiss="modal">{{locale_str_system_cancel}}</button>
				<button class="btn btn-default btn-primary" data-dismiss="modal">{{locale_str_system_save}}</button>
			</div>
		</div>
	</div>
</div>

